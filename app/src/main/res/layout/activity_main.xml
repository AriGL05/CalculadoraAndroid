<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lightblue"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:background="@color/darkerblue"
            android:layout_weight="2">
            <EditText
                android:labelFor="@+id/operacion"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="30sp"
                android:layout_weight="1"
                android:textAlignment="textEnd"/>
            <EditText
                android:labelFor="@+id/numbers"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="60sp"
                android:layout_weight="2"
                android:textAlignment="textEnd"
                android:text="0" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="15"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:text="7"
                    android:textSize="35dp"
                    android:background="@drawable/botonescalc"
                    android:labelFor="@+id/button_7"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <Button
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:text="8"
                    android:textSize="35dp"
                    android:background="@drawable/botonescalc"
                    android:labelFor="@+id/button_8"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <Button
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:text="9"
                    android:textSize="35dp"
                    android:background="@drawable/botonescalc"
                    android:labelFor="@+id/button_9"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <Button
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:text="+"
                    android:textSize="35dp"
                    android:background="@drawable/botonescalc"
                    android:labelFor="@+id/button_sum"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:text="4"
                    android:textSize="35dp"
                    android:background="@drawable/botonescalc"
                    android:labelFor="@+id/button_4"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <Button
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:text="5"
                    android:textSize="35dp"
                    android:background="@drawable/botonescalc"
                    android:labelFor="@+id/button_5"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <Button
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:text="6"
                    android:textSize="35dp"
                    android:background="@drawable/botonescalc"
                    android:labelFor="@+id/button_6"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <Button
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:text="-"
                    android:textSize="35dp"
                    android:background="@drawable/botonescalc"
                    android:labelFor="@+id/button_res"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:text="1"
                    android:textSize="35dp"
                    android:background="@drawable/botonescalc"
                    android:labelFor="@+id/button_1"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <Button
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:text="2"
                    android:textSize="35dp"
                    android:background="@drawable/botonescalc"
                    android:labelFor="@+id/button_2"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <Button
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:text="3"
                    android:textSize="35dp"
                    android:background="@drawable/botonescalc"
                    android:labelFor="@+id/button_3"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <Button
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:text="/"
                    android:textSize="35dp"
                    android:background="@drawable/botonescalc"
                    android:labelFor="@+id/button_div"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:text="C"
                    android:textSize="35dp"
                    android:background="@drawable/botonescalc"
                    android:labelFor="@+id/button_clear"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <Button
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:text="0"
                    android:textSize="35dp"
                    android:background="@drawable/botonescalc"
                    android:labelFor="@+id/button_0"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <Button
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:text="="
                    android:textSize="35dp"
                    android:background="@drawable/botonescalc"
                    android:labelFor="@+id/button_fin"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <Button
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:text="*"
                    android:textSize="35dp"
                    android:background="@drawable/botonescalc"
                    android:labelFor="@+id/button_mul"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>